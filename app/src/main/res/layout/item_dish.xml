<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cardViewItemDish"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@color/white"
    android:background="@color/white"
    app:backgroundTint="@null"
    android:layout_marginBottom="5dp"
    android:elevation="4dp"
    android:padding="16dp">
    <LinearLayout
        android:background="@color/white"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:scaleType="fitCenter"
            android:id="@+id/image_dish"
            android:layout_width="80dp"
            android:layout_height="80dp"
            />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:fontFamily="@font/roboto"
                android:id="@+id/text_dish_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mì Trộn Indomie Đặc Biệt Nhiều..."
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/text_dish_description"
                    android:fontFamily="@font/roboto"
                    android:text="khong biet viet gi"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:maxLines="1"
                    android:textSize="13dp"
                    android:layout_marginEnd="80dp"
                    android:textColor="@color/my_counter_color"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_dish_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FA0303"
                    android:text="65000"
                    android:inputType="numberDecimal"
                    android:fontFamily="@font/roboto"
                    android:textStyle="bold"
                    android:textSize="18sp" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    />

                <com.google.android.material.floatingactionbutton.FloatingActionButton

                    android:id="@+id/button_add_to_cart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/baseline_add_24"
                    android:backgroundTint="#0d6efd"
                    app:backgroundTint="@null"
                    android:scaleType="centerInside"
                    app:fabCustomSize="30dp"
                    android:padding="0dp"
                    app:tint="@color/white"
                    app:fabSize="mini"
                    />
                <TextView
                    android:id="@+id/text_het_hang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hết hàng"
                    android:fontFamily="@font/roboto_bold"
                    android:textColor="#FA0303"
                    android:layout_marginRight="8dp"
                    android:textSize="15dp"
                    android:visibility="gone"
                    />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>


</androidx.cardview.widget.CardView>
