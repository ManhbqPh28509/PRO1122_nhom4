<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_marginTop="20dp"
    android:padding="8dp">

        <TextView
            android:id="@+id/tv_user_rate_order"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nguyễn Thế Việt"
            android:textColor="@color/black"
            android:fontFamily="@font/roboto_bold"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginLeft="5dp"/>
        <me.zhanghai.android.materialratingbar.MaterialRatingBar
            android:stepSize="1"
            android:layout_gravity="center_vertical"
            android:id="@+id/library_tinted_wide_ratingbar_rateOrder"
            android:isIndicator="true"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:rating="5"
            app:mrb_progressTint="#FFC107"
            app:mrb_secondaryProgressTint="#525151"
            style="@style/Widget.MaterialRatingBar.RatingBar" />
        <TextView
            android:fontFamily="@font/roboto"
            android:textColor="@color/black"
            android:id="@+id/tv_content_rateOrder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="Hương vị rất đặc biệt, món ăn rất ngon, giao hàng nhanh"
            android:textSize="15sp"
            android:layout_marginLeft="5dp"/>

</LinearLayout>




