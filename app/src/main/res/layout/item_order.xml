<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_marginTop="10dp"
    android:id="@+id/linearLayout_CommingOrder"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_weight="2">
        <TextView
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_marginLeft="8dp"
            android:fontFamily="@font/roboto"
            android:textSize="16dp"
            android:text="Đơn hàng"/>
        <TextView
            android:layout_weight="1"
            android:layout_gravity="end"
            android:gravity="end"
            android:textSize="16dp"
            android:layout_marginRight="8dp"
            android:fontFamily="@font/roboto"
            android:textColor="@color/black"
            android:id="@+id/tv_ordertime"
            android:text="Hôm nay 12:16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp">
        <ImageView
            android:layout_marginLeft="15dp"
            android:src="@drawable/logohungryhub"
            android:layout_width="40dp"
            android:layout_height="40dp"/>
        <TextView
            android:text="Hungry Hub"
            android:layout_gravity="center_vertical"
            android:fontFamily="@font/roboto_bold"
            android:textStyle="bold"
            android:layout_marginLeft="8dp"
            android:textSize="17dp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="10">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView_DishesOrder"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="7"/>
        <LinearLayout
            android:layout_weight="3"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center">
            <TextView
                android:id="@+id/tv_totalPriceOrder"
                android:layout_width="wrap_content"
                android:fontFamily="@font/roboto_bold"
                android:textColor="@color/black"
                android:layout_height="wrap_content"
                android:text="140.000đ"/>
            <TextView
                android:id="@+id/tv_quantityOrder"
                android:text="5 món"
                android:textColor="@color/black"
                android:fontFamily="@font/roboto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_marginTop="4dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="#D9D9D9"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <LinearLayout
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:gravity="end"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_HuyDon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginLeft="8dp"
            android:background="@drawable/custom_button1"
            android:fontFamily="@font/roboto"
            android:text="Hủy đơn hàng"
            android:textColor="@color/white"
            app:backgroundTint="@null" />

        <TextView
            android:layout_weight="1"
            android:id="@+id/tv_orderStatus"
            android:textSize="16dp"
            android:layout_marginRight="8dp"
            android:textColor="@color/black"
            android:gravity="end"
            android:text="Chưa xác nhận"
            android:fontFamily="@font/roboto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btn_DaGiaoHang"
            android:layout_marginRight="8dp"
            android:text="Đã nhận được hàng"
            app:backgroundTint="@null"
            android:textColor="@color/white"
            android:fontFamily="@font/roboto"
            android:visibility="gone"
            android:background="@drawable/custom_button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:gravity="end"
        android:layout_marginTop="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_ShipTimeOrder"
            android:layout_gravity="end"
            android:drawableStart="@drawable/baseline_access_time_24"
            android:layout_width="wrap_content"
            android:layout_marginRight="8dp"
            android:text="Dự kiến giao hàng lúc 2:41 Hôm nay"
            android:fontFamily="@font/roboto_bold"
            android:textColor="@color/black"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</LinearLayout>