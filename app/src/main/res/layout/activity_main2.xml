<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:orientation="vertical"
    android:background="@color/white"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.MainActivity2">
    <FrameLayout
        android:id="@+id/frameLayoutUser"
        android:layout_width="match_parent"
        android:layout_above="@id/bottom_navi_user"
        android:layout_height="match_parent">
    </FrameLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navi_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        app:itemIconTint="@color/black"
        style="@style/AppTheme.BottomNavigationView"
        app:itemTextAppearanceActive="@style/BottomNavigationTextAppearanceSelected"
        app:itemTextAppearanceInactive="@style/BottomNavigationTextAppearance"
        app:itemTextColor="#000000"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/menu_user" />
</RelativeLayout>